# Dark Star Portal - Deployment Configuration
# Copy this file to deployment.env and customize for your environment

################################################################################
# Domain Configuration
################################################################################
# Your domain name (e.g., portal.example.com)
DOMAIN="portal.example.com"

# Enable SSL (true/false)
# Note: You'll need to run certbot manually after deployment
SSL_ENABLED=true

################################################################################
# Network Control API
################################################################################
# Password for enabling/disabling internet access in webtop
# This will be hashed with Argon2ID for security
NETWORK_CONTROL_PASSWORD="change-this-strong-password"

################################################################################
# Webtop Configuration
################################################################################
# Desktop environment (ubuntu-kde, ubuntu-mate, alpine-i3, etc.)
WEBTOP_IMAGE="lscr.io/linuxserver/webtop:ubuntu-kde"

# Resource limits
WEBTOP_MEMORY="2g"
WEBTOP_CPUS="1.5"

################################################################################
# Terminal Configuration
################################################################################
# Resource limits for ttyd terminal
TERMINAL_MEMORY="256m"
TERMINAL_CPUS="0.5"

################################################################################
# Security Settings
################################################################################
# Enable Fail2Ban (true/false) - Set to false for initial deployment
FAIL2BAN_ENABLED=false

# Enable UFW Firewall (true/false) - Set to false for initial deployment
UFW_ENABLED=false

# Enable monitoring script (true/false) - Set to false for initial deployment
MONITORING_ENABLED=false

################################################################################
# Optional: Email Notifications
################################################################################
# Email for Let's Encrypt and security alerts
ADMIN_EMAIL="admin@example.com"

################################################################################
# Advanced: CloudFlare Integration
################################################################################
# If using Cloudflare, set these for automated SSL
# CLOUDFLARE_API_TOKEN=""
# CLOUDFLARE_ZONE_ID=""
